@model MusicStore.Models.Albums
    @using MusicStore.Models;

@{
    ViewBag.Title = "AlbumDetails";
    IEnumerable<Songs> songs = ViewBag.ListOfSongs;
}

<h2>AlbumDetails</h2>

<div>
    <h4>Albums</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Artist.ArtistName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Artist.ArtistName)
        </dd>

        <dt>@Html.DisplayNameFor(model => model.Songs)</dt>
        @foreach (var item in songs)
        {
            if (item.SongsID == Model.AlbumsID)
            {
                <dd>@item.SongName</dd>
            }
        }
         
        <dt>
            @Html.DisplayNameFor(model => model.AlbumName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.AlbumName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.ReleaseDate)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ReleaseDate)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.PictureArt)
        </dt>

        <dd>
            <img src="~/Photos/@Model.PictureArt" width="100" height="50" />
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.AlbumsID }) |
    @Html.ActionLink("Back to List", "Index")
</p>
