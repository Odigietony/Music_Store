@using MusicStore.Models
@{
    ViewBag.Title = "Albums";
    IEnumerable<Albums> albums = ViewBag.listOfAlbums;
}

<section id="main" class="container">
    <div class="jumbotron">
        <h1> Tony's Music Store</h1>

        <h2>@ViewBag.Title.</h2>
    </div>
    <table class="table">
        <thead>
            <tr>
                <th><h3>Albums</h3></th>
            </tr>

            <tr>
                <th><h3>Album Picture Art</h3></th>
            </tr>
        </thead>
        @foreach (var list in albums)
        {
            <tbody>
                <tr>
                    <td><a href="@Url.Action("AlbumDetails", "Home", new { albumsid=list.AlbumsID })">@list.AlbumName</a></td>
                </tr>
                <tr>
                    <td><a href="@Url.Action("AlbumDetails", "Home", new { albumsid=list.AlbumsID })"><img src="~/Photos/@list.PictureArt" width="50" height="50" /></a></td>
                </tr>
            </tbody>

        }
    </table>
</section>

