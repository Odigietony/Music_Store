@model IEnumerable<MusicStore.Models.Albums>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Artist.ArtistName)
        </th>
        
        <th>
            @Html.DisplayNameFor(model => model.AlbumName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ReleaseDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PictureArt)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Artist.ArtistName)
        </td>
        
        <td>
            @Html.DisplayFor(modelItem => item.AlbumName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ReleaseDate)
        </td>

        <td>
            <img src="~/Photos/@item.PictureArt" width="50" height="50" />
        </td>

        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.AlbumsID }) |
            @Html.ActionLink("Details", "Details", new { id=item.AlbumsID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.AlbumsID })
        </td>
    </tr>
}

</table>
